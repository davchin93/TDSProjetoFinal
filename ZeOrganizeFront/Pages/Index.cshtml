@page
@model ZeOrganizeFront.Pages.Index
@{
    ViewData["Title"] = "Ze Organize - Início";
}
<style>
    body { 
        background-color: #e9ecef; 
        background-image: url('/images/123.jpg'); /* Defina o caminho da imagem de fundo aqui */
        background-size: cover;
        background-position: center;
        opacity: 1; /* Ajuste a opacidade do fundo */
    }

    .wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh; /* Deixe a div ocupar toda a altura da tela */
    }

    .content-box {
        background-color: rgba(255, 255, 255, 0.9); /* Fundo branco com opacidade */
        border-radius: 10px; /* Cantos arredondados */
        padding: 40px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2); /* Adiciona sombra ao redor do quadro */
        text-align: center;
        max-width: 600px; /* Limite de largura para o conteúdo */
        width: 100%;
    }

    h1 {
        font-size: 3rem; /* Tamanho da fonte ajustado */
    }

    p.lead {
        font-size: 1.25rem; /* Tamanho da fonte para o parágrafo principal */
    }
</style>

<div class="wrapper">
    <div class="content-box">
        <h1 class="display-4">Ze Organize</h1>
        <p class="lead">O melhor lugar para criar e organizar seus eventos!</p>
        <hr class="my-4">
        <p>Cadastre-se para criar eventos personalizados, gerenciar convidados e muito mais.</p>
        <a asp-page="/User/Register" class="btn btn-primary btn-lg">Cadastre-se</a>
    </div>
</div>
